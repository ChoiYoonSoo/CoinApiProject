<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Coin" parent="Theme.AppCompat.Light">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryDark">@color/red</item>
        <item name="colorAccent">@color/white</item>
        <item name="windowNoTitle">true</item>

    </style>
    <style name="Theme.Coin" parent="Base.Theme.Coin" />

    <style name="Theme.Coin.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/red</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/graph</item>
        <item name="postSplashScreenTheme">@style/Theme.Coin</item>
    </style>
</resources>